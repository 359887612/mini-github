.repo:first-of-type {
  padding-top: 46px;
}

.repo {
  border-top: 1rpx solid rgba(65, 65, 65, 0.9);
}

.fix-top {
  position:fixed;
  bottom: 300rpx;
  right: 60rpx;
  height: 60rpx;
  display: flex;
  background-color: transparent;
}

.fix-top .lang-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

button {
  border-radius: 0;
  color: #eee;
}

.van-search {
  width: 100%;
  position: fixed;
  padding: 20rpx !important;
  background: #24292e;
}

.van-search__field .field-index--van-field {
  border-radius: 8rpx !important;
}