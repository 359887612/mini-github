/* components/feedItem/feedItem.wxss */
.feed {
  display: flex;
  padding: 20rpx;
  overflow: hidden;
  color: #eee;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  min-width: 100rpx;
  min-height: 100rpx;
  border-radius: 50%;
}

.summary {
  margin-left: 10rpx;
  font-size: 28rpx;
  padding: 0 10rpx;
  word-break: break-all;
  display: flex;
  flex: 1;
  flex-wrap: wrap;
}

.time {
  margin-left: 10rpx;
  font-size: 22rpx;
  padding: 10rpx;
  color: #eee
}