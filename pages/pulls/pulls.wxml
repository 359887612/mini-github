<view class='pulls'>
  <tabs border='{{false}}' bind:change='changeFilter'>
    <tab title='已创建'>
      <pull wx:for='{{pulls}}' wx:key='{{index}}' item='{{item}}'></pull>
      <view class='empty' wx:if='{{pulls.length===0}}'>没有我创建的 Pull Request</view>
    </tab>
    <tab title='被分配'>
      <pull wx:for='{{pulls}}' wx:key='{{index}}' item='{{item}}'></pull>
      <view class='empty' wx:if='{{pulls.length===0}}'>
        <view>没有被分配的 Pull Request</view>
      </view>
    </tab>
    <tab title='提及我'>
      <pull wx:for='{{pulls}}' wx:key='{{index}}' item='{{item}}'></pull>
      <view class='empty' wx:if='{{pulls.length===0}}'>没有提及我的 Pull Request</view>
    </tab>
    <tab title='待审核'>
      <pull wx:for='{{pulls}}' wx:key='{{index}}' item='{{item}}'></pull>
      <view class='empty' wx:if='{{pulls.length===0}}'>没有待审核的 Pull Request</view>
    </tab>
    <tab title='已关闭'>
      <pull wx:for='{{pulls}}' wx:key='{{index}}' item='{{item}}'></pull>
      <view class='empty' wx:if='{{pulls.length===0}}'>没有已关闭的 Pull Request</view>
    </tab>
  </tabs>
</view>